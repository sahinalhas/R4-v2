# =============================================================================
# REHBER360 - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment mode (development | production | test)
NODE_ENV=development

# Server port (default: 3000, Replit production: 5000)
PORT=5000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database file path (relative to project root)
DATABASE_PATH=./database.db

# =============================================================================
# SECURITY & SESSION
# =============================================================================

# Session secret for cookie signing (REQUIRED - generate a random string)
# Example: openssl rand -base64 32
SESSION_SECRET=your-secret-key-change-this-in-production

# Encryption key for backup encryption (REQUIRED - generate a random string)
# Example: openssl rand -base64 32
ENCRYPTION_KEY=your-encryption-key-change-this-in-production

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================
# Configure at least one AI provider for AI features to work

# OpenAI API Key (optional - for GPT models)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google Gemini API Key (optional - for Gemini models)
# Get your key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# Ollama Configuration (optional - for local AI)
# Ollama runs locally, no API key needed
# Download at: https://ollama.ai
# OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# CORS & SECURITY
# =============================================================================

# Allowed origins for CORS (comma-separated, optional)
# In production, specify your domain(s)
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Test ping message (optional - for testing)
PING_MESSAGE=pong

# =============================================================================
# OPTIONAL FEATURES
# =============================================================================

# File upload size limit in MB (default: 10)
# MAX_FILE_SIZE_MB=10

# Rate limiting - requests per minute (default: 100)
# RATE_LIMIT_PER_MINUTE=100
